@font-face {
    font-family: "Roboto-Medium";
    src: local('Roboto-Medium'), url("../fonts/Roboto-Medium.woff2") format("woff2"), url("../fonts/Roboto-Medium.woff") format("woff");
}
  
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%;
}

h1, h2, h3, h4, h5, h6, p {
    margin-bottom: 8px;
}
body {
    background-color: #2e3136;
    color: #fff;
    font-family: Roboto-Medium;
}

.topMenu {
    width: 100%;
    height: 70px;
    margin-bottom: 15px;
    background-color: #424549;
}

.rectSpot {
    width: 750px;
    height: 80px;
    margin: 10px 0 10px 5px;
    background-color: #33363B;
    border-radius: 10px;
}

.timerContainer {
    display: flex;
    justify-content: left;
    align-items: center;
    width: 750px;
    height: 80px;
    margin: 10px 0 10px 0px;
    background-color: #424549;
    border-radius: 10px;
}

.buttonDrag {
    width: 15px;
    height: 37px;
    margin-top: -8px;
    margin-left: 3px;
    margin-right: 1px;
    background: none;
    border: none;
    font-size: 30px;
    font-family: Roboto-Medium;
    color: #fff;
    cursor: ns-resize;
}

.buttonCheck {
    margin-right: 2.5px;
}

.timerText {
    width: max-content;
    margin-left: 2.5px;
    margin-right: 2.5px;
    font-size: 40px; 
}

.timerButtons {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    margin-left: 2.5px;
    margin-right: 2.5px;
    background-color: #62656A;
    border-radius: 5px;
    border-color: #45484b;
    font-size: 30px;
    font-family: Roboto-Medium;
    line-height: .5;
    color: #fff;
}

.buttonPlayPause {
    color: #40d390;
}

.buttonAddAmount {
    font-size: 20px;
    line-height: .8;
}

.buttonTrash {
    width: 38px;
    height: 38px;
    border-color: #ff4b4b;
}

.buttonTrash svg {
    margin: 5px;
    fill: #ff4b4b;
}

.buttonPlayPause, .buttonTrash {
    line-height: 1;
}